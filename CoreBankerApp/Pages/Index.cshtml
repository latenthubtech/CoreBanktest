@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Create @Model.Data.Count</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
